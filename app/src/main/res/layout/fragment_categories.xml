<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.CategoriesFragment">

        <Button
            android:id="@+id/women"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/women"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/women" />

        <Button
            android:id="@+id/men"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:background="@drawable/men" />


        <Button
            android:id="@+id/kids"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:background="@drawable/kids" />

        <ImageView
            android:id="@+id/bandp"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/bandp" />

        <ImageView
            android:id="@+id/style"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/style" />

        <ImageView
            android:id="@+id/plusisze"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/plussize" />

        <ImageView
            android:id="@+id/allfestive"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/festive" />

        <ImageView
            android:id="@+id/homeliving"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/gadgets"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/acce" />


        <ImageView
            android:id="@+id/ever"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/theme" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
